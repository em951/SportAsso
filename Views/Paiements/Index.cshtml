@model IEnumerable<SportAssovv.Models.Paiement>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-color: #EBE3EF;
    }
</style>

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Adherent.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MontantPaye)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePaiement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroCarte)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomTitulaire)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateExpiration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cvv)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adherent.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MontantPaye)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePaiement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCarte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomTitulaire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateExpiration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cvv)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PaiementId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PaiementId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PaiementId })
            </td>
        </tr>
    }

</table>

</br>
<a href="@Url.Action("AdminAccount", "AdherentAccount")" class="btn btn-primary">Compte Administrateur</a>
