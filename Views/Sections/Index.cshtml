@model IEnumerable<SportAssovv.Models.Section>

@{
    ViewBag.Title = "Index";
}


<style>
    body {
        background-color: #EBE3EF;
    }
</style>

<h2>Liste des sections</h2>

<p>
    @Html.ActionLink("Créer une nouvelle section", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Discipline.NomDiscipline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomSection)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeureDebut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeureFin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Encadrant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lieu)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Discipline.NomDiscipline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomSection)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeureDebut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeureFin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Encadrant)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lieu)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SectionId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SectionId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SectionId })
        </td>
    </tr>
}

</table>
<br/>
<a href="@Url.Action("AdminAccount", "AdherentAccount")" class="btn btn-primary">Compte Administrateur</a>
