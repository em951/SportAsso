
@{
    ViewBag.Title = "View";
}

<div class="row">
    <div class="col-md-6">
        <h2>Connexion Membre</h2>
        @using (Html.BeginForm("Login", "AdherentAccount", FormMethod.Post))
        {
            <label for="email">E-mail</label>
            <input type="email" id="email" name="email" class="form-control mb-3"/>
            <label for="password">Mot de Passe</label>
            <input type="password" id="password" name="password" class="form-control mb-3"/>
            <button type="submit" class="btn btn-primary mb-3">Se connecter</button>
        }

        @Html.ActionLink("Mot de passe oublié ?", "ResetMotPasse", "Adherent", null, new { @class = "btn btn-primary mb-3" })
        <br />
        @Html.ActionLink("Nouveau Compte", "Inscription", "Adherent", null, new { @class = "btn btn-primary mb-3" })
    </div>


    <div class="col-md-6">
        <img src="~/Images/connexionMembre.png" />

    </div>

</div>
