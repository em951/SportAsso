
@{
    ViewBag.Title = "View";
}

<h2>Connexion</h2>
@using (Html.BeginForm("Login", "AdherentAccount", FormMethod.Post))
{
    <label for="email">E-mail</label>
    <input type="email" id="email" name="email" />
    <label for="password">Mot de Passe</label>
    <input type="password" id="password" name="password" />
    <button type="submit">Se connecter</button>
}

@Html.ActionLink("Mot de passe oublié ?", "ResetMotPasse", "Adherent", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Nouveau Compte", "Inscription", "Adherent", null, new { @class = "btn btn-primary" })



