
@{
    ViewBag.Title = "View";
}

<div class="row">
    <div class="col-md-6">
        <h2>Connexion Membre</h2>
        @using (Html.BeginForm("Login", "AdherentAccount", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <label for="email">E-mail</label>
            <input type="email" id="Email" name="Email" class="form-control mb-3" />
            <label for="password">Mot de Passe</label>
            <input type="password" id="MotDePasse" name="MotDePasse" class="form-control mb-3" />
            <button type="submit" class="btn btn-primary mb-3">Se connecter</button>
        }

        @Html.ActionLink("Mot de passe oublié ?", "ResetMotPasse", "Adherents", null, new { @class = "btn btn-primary mb-3" })
        <br />
        @Html.ActionLink("Nouveau Compte", "Register", "Adherents", null, new { @class = "btn btn-primary mb-3" })
    </div>


    <div class="col-md-6">
        <img src="~/Images/connexionMembre.png" />
    </div>

</div>
