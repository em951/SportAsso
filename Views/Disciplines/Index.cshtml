@model IEnumerable<SportAssovv.Models.Discipline>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-color: #EBE3EF;
    }
</style>

<h2>Liste des Disciplines </h2>

<p>
    @Html.ActionLink("Créer une nouvelle discipline", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomDiscipline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlacesDisponibles)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomDiscipline)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlacesDisponibles)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DisciplineId }) |
            @Html.ActionLink("Details", "Details", new { id=item.DisciplineId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DisciplineId })
        </td>
    </tr>
}

</table>

<a href="@Url.Action("AdminAccount", "AdherentAccount")" class="btn btn-primary">Compte Administrateur</a>
