@model SportAssovv.Models.Adherent

@{
    ViewBag.Title = "Register";
}
<script>
    $(function () {
        // Manipula a submissão do formulário
        $("form").submit(function () {
            // Obtém a data selecionada
            var date = $("#datepicker").val();

            // Verifica se a data foi selecionada
            if (date) {
                // Adiciona a hora por padrão (08:00) à data selecionada
                var completeDate = date.split('T')[0] + 'T08:00';

                // Atualiza o campo oculto com a data completa
                $("#completeDate").val(completeDate);
            }
        });
    });
</script>

